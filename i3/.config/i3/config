# Color Styles           border       background text       indicator  child_border
client.focused           $border      $bg1       $base1     $border    $border
client.focused_inactive  $cblk-ln-bg  $bg1       $base1     $border    $border
client.unfocused         $cblk-bg     $bg1       $base1     $border    $border
client.urgent            $type        $bg1       $base1     $border    $border
client.placeholder       $border      $bg1       $base1     $border    $border
client.background                     $bg1


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

# Bar primary/mid
bar {
        output primary
        position top
        tray_output primary
        #workspace_min_width 50
        strip_workspace_numbers no
        strip_workspace_name no
        binding_mode_indicator yes
        colors {
               #colorclass          border       background   text
               background                        $bg1
               statusline                                     $base
               separator                                      $act2
               focused_background                $cblk-ln-bg
               focused_statusline                             $base
               focused_separator                              $type
               focused_workspace    $cblk        $cblk-ln     $base
               active_workspace     $cblk-ln     $act2        $base
               inactive_workspace   $cblk-bg     $cblk-ln-bg  $base
               urgent_workspace     $type        $func        $base
               #binding_mode
        }
}

# Bar right
bar {
        output DVI-D-0
        position top
        status_command i3status
        tray_output none
        #workspace_min_width 50
        strip_workspace_numbers no
        strip_workspace_name no
        binding_mode_indicator yes
        colors {
               #colorclass          border       background   text
               background                        $bg1
               statusline                                     $base
               separator                                      $border
               focused_background                $cblk-ln-bg
               focused_statusline                             $base
               focused_separator                              $border
               focused_workspace    $cblk        $cblk-ln     $base
               active_workspace     $cblk-ln     $act2        $base
               inactive_workspace   $cblk-bg     $cblk-ln-bg  $base
               urgent_workspace     $type        $func        $base
               #binding_mode
        }
}
